{
    "version": 2,
    "builds": [
        {
            "src": "/public/*",
            "use": "@now/static"
        },
        {
            "src": "./src/**/*.ts",
            "use": "@now/node-server"
        }
    ],
    "env": {
        "IS_PROD": "false"
    },
    "routes": [
        { "src": "/public/(.*)", "dest": "/public/$1" },
        { "src": "/graphql/(.*)", "dest": "/src/graphql/index" },
        { "src": "/auth/(.*)", "dest": "/src/auth/index" },
        { "src": "/(.*)", "dest": "/src/graphql/index" }
    ]
}
